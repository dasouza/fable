<rss xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
    <channel>
        <title>Home on fraq</title>
        <link>{{ url('article_index') }}</link>
        <description>Recent content in Home on fraq</description>
        <language>es-ES</language>
        {% set lastArticle = articles|last %}
        <lastBuildDate>{{ lastArticle.created|date("r") }}</lastBuildDate>
        <atom:link href="{{ url('article_index') }}" rel="self" type="application/rss+xml"/>
        {% for article in articles %}
        <item>
            <title>{{ article.title }}</title>
            <link>{{ url('article_show', { 'category': article.category.slug, 'slug': article.slug }) }}</link>
            <pubDate>{{ article.created|date("r") }}</pubDate>
            <guid>{{ url('article_show', { 'category': article.category.slug, 'slug': article.slug }) }}</guid>
            <description>{{ article.summary }}</description>
        </item>
        {% endfor %}
    </channel>
</rss>
